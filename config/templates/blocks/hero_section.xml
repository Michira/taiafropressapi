<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>hero_section</key>

    <meta>
        <title lang="en">Hero Section</title>
        <title lang="de">Hero Section</title>
    </meta>

    <properties>
        <property name="headline" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Headline</title>
                <!-- <info lang="en">The main headline for the hero section.</info> -->
            </meta>
            <params>
                <param name="max_length" value="100"/>
            </params>
        </property>

        <property name="subheading" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Sub Headline</title>
                <!-- <info lang="en">The main headline for the hero section.</info> -->
            </meta>
            <params>
                <param name="max_length" value="100"/>
            </params>
        </property>
        
        <property name="text" type="text_area">
            <meta>
                <title lang="en">Text</title>
            </meta>
        </property>
        
        <property name="image" type="single_media_selection" mandatory="true">
            <meta>
                <title lang="en">Hero Image</title>
            </meta>
            <params>
                <param name="types" value="image"/>
                <param name="min_files" value="1"/>
            </params>
        </property>
    </properties>
</template>